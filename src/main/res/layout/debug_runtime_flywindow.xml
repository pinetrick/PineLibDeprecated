<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w12b"
    android:layout_height="@dimen/w12b"
    android:descendantFocusability="blocksDescendants" >

    <Button
        android:id="@+id/btn_debug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80dddddd"
        android:gravity="center"
        android:text="Load."
        android:textColor="@color/black"
        android:textSize="@dimen/f20k" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/cpu_info"
            android:layout_width="@dimen/w6b"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#80ff0000" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mem_info"
            android:layout_width="@dimen/w6b"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/cpu_info"
            android:background="#80ffff00" >
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>