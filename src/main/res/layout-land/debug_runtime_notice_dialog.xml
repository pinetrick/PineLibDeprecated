<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="@dimen/h80b"
        android:layout_height="@dimen/w80b"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/message_box_circle" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w10b" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/h5b"
                android:layout_height="@dimen/h5b"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/warning" />

            <TextView
                android:id="@+id/mainMassage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="Pine调试器附在:MyTestActivity"
                android:textColor="#ffffff"
                android:textSize="@dimen/f40k" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#2dffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w70b"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/debug_runtime_func_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50b"
                android:numColumns="3" >
            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w10b" >

                <Button
                    android:id="@+id/debug_runtime_copy_btn"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="崩溃日志"
                    android:textColor="@color/black"
                    android:textSize="@dimen/f50k" />

                <Button
                    android:id="@+id/debug_runtime_setting_btn"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/greenyellow"
                    android:text="清空/卸载"
                    android:textColor="@color/black"
                    android:textSize="@dimen/f50k" />

                <Button
                    android:id="@+id/debug_runtime_debug_btn"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="调试应用"
                    android:textColor="@color/black"
                    android:textSize="@dimen/f50k" />
            </LinearLayout>

            <Button
                android:id="@+id/debug_runtime_ret_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w10b"
                android:background="@color/green"
                android:text="返回"
                android:textSize="@dimen/f80k" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>