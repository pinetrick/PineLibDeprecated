<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="@dimen/h99b"
        android:layout_height="@dimen/w90b"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/message_box_circle" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w5b" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/h5b"
                android:layout_height="@dimen/h5b"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/warning" />

            <TextView
                android:id="@+id/delBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="点这里清除全部错误日志(没有提示)"
                android:textColor="#ffffff"
                android:textSize="@dimen/f40k" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#2dffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w85b"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/debug_runtime_func_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w30b"
                android:numColumns="3" >
            </GridView>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w55b"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/errorLog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="没有崩溃日志。。。"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f27k" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>